@model MyCourseraWebApp.ViewModel.CourseDetailsViewModel

@{
    ViewBag.Title = "View Course Details";
}

<div class="view-course-form">
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        <div class="col-md-5">
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Title, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control readonly", @readonly = "", @disabled = "true" })
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.Description, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @readonly = "", @disabled = "true" })
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.From, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.From, "{0:yyyy-MM-dd}", new { @class = "form-control jqueryui-marker-datepicker date-picker", @readonly = "", @disabled = "true" })
            </div>
            <div class="form-group col-md-12">
                @Html.LabelFor(m => m.To, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.To, "{0:yyyy-MM-dd}", new { @class = "form-control jqueryui-marker-datepicker date-picker", @readonly = "", @disabled = "true" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group col-md-12">
                <div class="pull-right">
                    <input type="button" value="Return To Courses" onclick="location.href='@Url.Action("Index", "Courses")'" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            coursesController.bindDatePickerControls();
        });
    </script>
}